html
  style.
    * {
      box-sizing: border-box;
    }
    body {
      font-family: Verdana, sans-serif;
      background: linear-gradient(0deg,#48362c 25%,#dbbb87 48%);
    }
    .mySlides {
      display: none;
    }
    .mySlides > img {
      vertical-align: middle;
      height: 50vh;
      width: auto;
    }
    /* Slideshow container */
    .slideshow-container {
      max-width: 1000px;
      position: relative;
      margin: auto;
      display: inline-block;
    }
    .indexComment{
      background-color: rgba(255,255,255,0.75);
      margin-top: 10px;
      margin-bottom: 10px;
      padding : 15px;
    }
    .commentLeft{
      border-radius: 0px 10px 10px 0px;
    }
    .commentRight{
      border-radius: 10px 0px 0px 10px;
    }
    .indexComment > h2 {
      font-style: oblique;
      font-size: 18px;
    }
    #asideLeftComments{
      display: inline-block;
      float: left;
      text-align: center;
      width : 25%;
    }
    #asideRightComments
    {
      display: inline-block;
      float: right;
      text-align: center;
      width : 25%;
    }
    #indexWrapper{
      margin-bottom: 10px;
    }
    /* Caption text */
    .text {
      color: #f2f2f2;
      font-size: 15px;
      padding: 8px 12px;
      position: absolute;
      bottom: 8px;
      width: 200px;
      left: calc(50% - 100px);
      text-align: center;
      background-color: rgba(0,0,0,0.5);
    }
    /* Number text (1/4 etc) */
    .numbertext {
      color: #f2f2f2;
      font-size: 12px;
      padding: 8px 12px;
      position: absolute;
      top: 0;
      left: calc(50% - 20px);
    }
    /* The dots/bullets/indicators */
    .dotSlide {
      height: 15px;
      width: 15px;
      margin: 0 2px;
      background-color: #bbb;
      border-radius: 50%;
      display: inline-block;
      transition: background-color 0.6s ease;
      margin-bottom: 10px;
    }
    .active {
      background-color: #717171;
    }
    /* Fading animation */
    .fade {
      -webkit-animation-name: fade;
      -webkit-animation-duration: 1.5s;
      animation-name: fade;
      animation-duration: 1.5s;
    }
    @-webkit-keyframes fade {
      from {opacity: .4}
      to {opacity: 1}
    }
    @keyframes fade {
      from {opacity: .4}
      to {opacity: 1}
    }
    /* On smaller screens, decrease text size */
    @media only screen and (max-width: 300px) {
      .text {
        font-size: 11px
      }
    }
  script.
    'use strict';
    window.document.addEventListener('DOMContentLoaded', function () {
      var indexButton = document.getElementById('indexButton');
      indexButton.addEventListener('click', function (evt) {
        window.location.href = '/lobby';
      });
      var slideIndex = 0;
      showSlides();

      function showSlides() {
        var i;
        var slides = document.getElementsByClassName("mySlides");
        var dots = document.getElementsByClassName("dotSlide");
        for (i = 0; i < slides.length; i++) {
          slides[i].style.display = "none";  
        }
        slideIndex++;
        if (slideIndex > slides.length) {slideIndex = 1}    
        for (i = 0; i < dots.length; i++) {
          dots[i].className = dots[i].className.replace(" active", "");
        }
        slides[slideIndex-1].style.display = "block";  
        dots[slideIndex-1].className += " active";
        setTimeout(showSlides, 5000); // Change image every 2 seconds
      }
    });
